@inherits AkiApplication.Layouts.MainLayoutComponent

@inject IHttpClientFactory ClientFactory
@using Radzen
@using Radzen.Blazor
@using System.Text.Json
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
            <RadzenLabel Text="お小遣い帳" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebar1Expanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Icon="home" Text="集計" Path="home">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="home" Text="予定" Path="schedule">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="home" Text="予定" Path="future">
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        @Body
    </RadzenBody>
    @*  <RadzenFooter>
    Footer
    </RadzenFooter>*@
</RadzenLayout>

@code {
    bool sidebar1Expanded = true;
}